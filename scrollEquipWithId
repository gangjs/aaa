    // 위 원본 소스, 주문서 성공 후 1회 실패 시 +2가 되는 경우 수정
    if (eqstats.containsKey("tuc") && nEquip.getLevel() + nEquip.getUpgradeSlots() < (eqstats.get("tuc") + nEquip.getViciousHammer()) - 1) {
        nEquip.setUpgradeSlots((byte) Math.min(nEquip.getUpgradeSlots() + 2, eqstats.get("tuc") + nEquip.getViciousHammer()));
    } else if (eqstats.containsKey("tuc") && nEquip.getLevel() + nEquip.getUpgradeSlots() == (eqstats.get("tuc") + nEquip.getViciousHammer()) - 1) {
        nEquip.setUpgradeSlots((byte) (nEquip.getUpgradeSlots() + 1));
    }              
    break;
}
