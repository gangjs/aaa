                    case 2049006:
                    case 2049007:
                    case 2049008: {
                        /*
                        if (eqstats.containsKey("tuc") && nEquip.getLevel() + nEquip.getUpgradeSlots() < (eqstats.get("tuc") + nEquip.getViciousHammer())) {
                            //저주 받은 백의 주문서 업글 횟수 7인 아이템 기준
                            //1번만 실패하고 +6작까지 했을 때 저주받은 백의 주문서 사용시 황망 바른거처럼 총 +8작까지 가능하던 점 해결
                            nEquip.setUpgradeSlots((byte) Math.min(nEquip.getUpgradeSlots() + 2, eqstats.get("tuc") + nEquip.getViciousHammer()));
                        }
                        */               
                        if (eqstats.containsKey("tuc")) {
                            int currentUpgradeSlots = nEquip.getLevel() + nEquip.getUpgradeSlots();
                            int maxUpgradeSlots = eqstats.get("tuc") + nEquip.getViciousHammer();

                            if (currentUpgradeSlots < maxUpgradeSlots) {
                                // 현재 업그레이드 가능한 슬롯 수가 최대 슬롯 수보다 적다면
                                int potentialUpgradeSlots = nEquip.getUpgradeSlots() + 2;
                                // 실패 후 성공했을 때 최대 슬롯 수를 초과하지 않도록 함
                                int newUpgradeSlots = Math.min(potentialUpgradeSlots, maxUpgradeSlots);

                                // 만약 기존 업그레이드 가능한 슬롯 수가 실패한 경우에만 추가
                                if (nEquip.getUpgradeSlots() < newUpgradeSlots) {
                                    nEquip.setUpgradeSlots((byte) newUpgradeSlots);
                                }
                            }
                        }
                        break;
                    }
